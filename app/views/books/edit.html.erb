<section class="edit-book">
  <h1>Editing Book</h1>
    <%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>

    <% if @book.errors.any? %>
      <% @book.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>

    <div class="field">
      <h4>Title</h4>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <h4>Body</h4>
      <%= f.text_area :body %>
    </div>

    <div class="actions">
      <%= f.submit 'Update Book' %>
    </div>

      <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", "/books" %>
    <% end %>
</section>